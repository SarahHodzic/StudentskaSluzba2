<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar {
            background-color: darkred;
            overflow: hidden;
        }

        .listitem {
            display: block;
            background-color: darkred;
        }

            .listitem:hover {
                background-color: black;
            }

        .linkovi:hover {
            background-color: black;
            color: white !important;
        }

        .linkovi {
            color: white !important;
        }

        .navbar-brand:hover {
            background-color: black !important;
        }

        .linkovi:active {
            background-color: black;
        }

        .dropdown {
            float: left;
        }

            .dropdown .padajucimeni, .dropbtn {
                display: inline-block;
                color: white;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                .dropdown .padajucimeni:hover, .dropdown:hover .dropbtn {
                    background-color: darkred;
                }

        .dropdown {
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: fixed;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content .padajucimeni {
                color: white;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
                background-color: darkred;
            }

                .dropdown-content .padajucimeni:hover .dropdown-content1 {
                    background-color: black;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown .padajucimeni:hover, .dropdown:hover .dropbtn {
            background-color: black;
        }

        .dropbtn {
            color: white !important;
        }

            .dropbtn:hover {
                background-color: black !important;
                color: white !important;
            }

        .navbar .glyphicon {
            margin-right: 8px;
            margin-left: 10px;
        }
        .fa {
            padding: 10px;
            font-size: 30px;
            width: 50px;
            text-align: center;
            text-decoration: none;
            margin: 7px 2px;
            border-radius:5px;
        }

            .fa:hover {
                opacity:0.8;
            }

        .fa-facebook {
            background-color: darkblue;
            color: white;
            float: right;
        }
        .fa-instagram {
            background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
            color: white;
            float: right;
        }
        .fa-linkedin {
            background: #0e76a8;
            color: white;
            float: right;
        }
        .fa-youtube {
            background: #bb0000;
            color: white;
            float: right;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div id="div1" class="navbar navbar-inverse navbar-fixed-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="linkovi navbar-brand" href='@Url.Action("Index", "Home")'><span class="glyphicon glyphicon-home"></span> Početna</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="listitem"><a class="linkovi " href='@Url.Action("About","Home")'><span class="glyphicon glyphicon-info-sign"></span> O nama</a></li>
                    @if (Session["FullName"] == null)
                    {
                        <li class="listitem"><a class="linkovi " href='@Url.Action("Studentska", "Home")'><span class="glyphicon glyphicon-briefcase"></span> Studentska služba</a></li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropbtn"><span class="glyphicon glyphicon-briefcase"></span> Studentska služba <span class="caret"> </span></a>
                            <div class="dropdown-content">
                                <a href="@Url.Action("Upis","Home")" class="padajucimeni">Upis</a>
                                <a href="#" class="padajucimeni">Potvrde o položenim ispitima</a>
                                <a href="@Url.Action("Index","Student")" class="padajucimeni">Potvrda o pripadnost fakultetu</a>
                                <a href="@Url.Action("Index","Pohadjanje")" class="padajucimeni">Prijava ispita</a>
                                <a href="#" class="padajucimeni">Prijava izbornog predmeta</a>
                                <a href="@Url.Action("Create","Zalba")" class="padajucimeni">Žalbe</a>
                            </div>
                        </li>
                    }
                    <li class="listitem"><a class="linkovi " href='@Url.Action("Contact","Home")'><span class="glyphicon glyphicon-earphone"></span> Kontakt</a></li>
                    @if (Session["FullName"] == null)
                    {
                        <li class="listitem"><a class="linkovi " href='@Url.Action("LogIn","Home")'><span class="glyphicon glyphicon-user"></span> Prijava</a></li>
                        <li class="listitem"><a class="linkovi " href='@Url.Action("Registracija","Home")'><span class="glyphicon glyphicon-user"></span> Registracija</a></li>
                    }
                    else
                    {
                        <li class="listitem"><a class="linkovi " href='@Url.Action("Logout","Prijava")'><span class="glyphicon glyphicon-off"></span> Odjavi se</a></li>
                    }

                </ul>
                <a href="https://www.facebook.com/" class="fa fa-facebook" target="_blank"></a>
                <a href="https://www.instagram.com/" class="fa fa-instagram" target="_blank"></a>
                <a href="https://www.linkedin.com/" class="fa fa-linkedin" target="_blank"></a>
                <a href="https://www.youtube.com/" class="fa fa-youtube" target="_blank"></a>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center">Copyright &copy; @DateTime.Now.Year - Fakultet informacionih tehnologija</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

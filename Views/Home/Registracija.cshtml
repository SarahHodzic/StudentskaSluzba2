<!DOCTYPE html>
<html>
@{ 
    ViewBag.Title = "Registracija";
}
<head>
    <title>Registracija</title>
</head>
<body>
    <br>
    <div class="registracija">
        <form id="login" method="get" action="/Prijava/Registracija">
            <div class="form-group" style="display:inline-block; width:48%;padding-right: 5%;">
                <label>
                    <b>
                        Ime:

                    </b>
                </label>
                <input type="text" name="Ime" id="ime" placeholder="Ime">
            </div>
            <div class="form-group" style="display:inline-block; width:48%; padding-left: 5%;float: right;">
                <label>
                    <span class="glyphicon glyphicon-user"></span>
                    <b>
                        Korisničko ime:

                    </b>
                </label>
                <input type="text" name="Korisnicko_ime" id="korisnik" placeholder="Korisničko ime">
            </div>
            <br><br>
            <div class="form-group" style="display:inline-block; width:48%;padding-right: 5%;">
                <label>
                    <b>
                        Prezime:

                    </b>
                </label>
                <input type="text" name="Prezime" id="prezime" placeholder="Prezime">
            </div>
            <div class="form-group" style="display:inline-block; width:48%; padding-left: 5%;float: right;">
                <label>
                    <span class="glyphicon glyphicon-lock"></span>
                    <b>
                        Lozinka:
                    </b>
                </label>
                <input type="Password" name="Lozinka" id="lozinka" placeholder="Lozinka">
            </div>
            <br><br>
            <div class="form-group" style="display:inline-block; width:48%;padding-right: 5%;">
                <label>
                    <b>
                        JMBG:

                    </b>
                </label>
                <input type="text" name="JMBG" id="jmbg" placeholder="JMBG">
            </div>


            <div class="form-group" style="display:inline-block; width:48%; padding-left: 5%;float: right;">
                <label>
                    <span class="glyphicon glyphicon-envelope"></span>
                    <b>
                        Email:
                    </b>
                </label>
                <input type="email" name="Email" id="email" placeholder="Email">
            </div>
            <br><br>

            <button type="submit" class="button">Registruj se</button>
            <br><br>
        </form>
    </div>
</body>
</html>
<style>
    body {
        margin: 0;
        padding: 0;
        background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)),url('https://irjst.com/wp-content/uploads/2019/12/308-name05903-chim-1600x989.jpg');
        background-size: cover;
        background-position: center;
        font-family: 'Arial';
    }

    .registracija {
        width: auto;
        overflow: hidden;
        margin: 100px auto;
        /* margin: 200px 0 0 450px;*/
        display: table;
        padding: 80px;
        background: black;
        border-radius: 15px;
    }

    h2 {
        text-align: center;
        color: #277582;
        padding: 20px;
    }

    label {
        color: white;
        font-size: 17px;
    }

    #korisnik, #ime, #prezime, #jmbg {
        width: 100%;
        height: 30px;
        border: none;
        border-radius: 3px;
        padding-left: 8px;
    }

    #lozinka {
        width: 100%;
        height: 30px;
        border: none;
        border-radius: 3px;
        padding-left: 8px;
    }

    #email {
        width: 100%;
        height: 30px;
        border: none;
        border-radius: 3px;
        padding-left: 8px;
    }

    #log {
        width: 300px;
        height: 30px;
        border: none;
        border-radius: 17px;
        padding-left: 7px;
        color: blue;
    }

    span {
        text-align: center;
        color: white;
        font-size: 17px;
    }

    a {
        float: right;
    }

    .button {
        text-align: center;
        display: block;
        margin: 0 auto;
    }
</style>
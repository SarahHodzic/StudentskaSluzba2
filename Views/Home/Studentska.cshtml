        .container .box {
            position: relative;
            width: auto;
            height: 350px;
            background-color: white;
            /*  margin:10px;*/
            /*box-sizing:border-box;*/
            /*    display: inline-block;*/
        }

            .container .box .imgBox {
                position: relative;
                overflow: hidden;
                border-radius:5px;
            }

                .container .box .imgBox img {

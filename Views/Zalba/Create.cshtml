@model StudentskaSluzba2.App_Start.Zalba

@{
    ViewBag.Title = "Žalba";
}

<h2>Žalba</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID_Student, "Ime studenta: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("ID_Student", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.TextBox("Student", null, htmlAttributes: new { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.ID_Student, "", new { @class = "text-danger" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ID_Student, "Prezime studenta: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_Student1", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_Student, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
                <b class="control-label col-md-2">
                    Razlog žalbe:
                </b>
                <div class="col-md-10">
                    <input type="text" name="zalba" id="zalba" placeholder="" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <p class="control-label col-md-2"></p>
                <div class="col-md-10">
                    <textarea rows="10" cols="500" name="description" placeholder="Žalba" style="box-sizing:border-box" id="text1"></textarea><br>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Pošalji" class="btn btn-default" />
                </div>
            </div>
    </div>
    <div class="form-horizontal">
        <form id="zalba">
           
        </form>
    </div>
}
